<div id="<%= dom_id author %>">
  <div class="authorbox">
    <p>
      <strong>Name:</strong>
      <%= author.name %>
    </p>
    <p>
      <strong>Books: </strong>
      <ul>
        <% author.books.each do |book| %>
          <li><%= book.title %> <%= link_to "(See!)", book_path(book) %></li>
        <% end %>
      </ul>
    </p>
  </div>
</div>
 


